{
    "compileOnSave": true,
    "compilerOptions": {
        "watch": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "module": "es6",
        "jsx": "react",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": [
        "./src/",
        "./typings/**/*.d.ts"
    ]
}